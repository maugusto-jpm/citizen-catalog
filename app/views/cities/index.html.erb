<div class="page-with-margin">

  <h4>Lista de cidades</h4>

  <div class="card mb-4">

    <div class="card-body">
      <%= form_tag(cities_path, method: :post, class: 'w-100') do %>

        <div class="row w-100">

          <div class="col-md-4 form-group">
            <%= label_tag :name, 'Nome' %>
            <%= text_field :name, params[:name], class: 'form-control' %>
          </div>

          <div class="col-md-4 form-group">
            <%= label_tag :state, 'Estado' %>
            <%= text_field :state, params[:state], class: 'form-control' %>
            <%# select_tag "state", options_from_collection_for_select(@states, 'id', 'name', params[:state]), prompt: "<todos>", class: 'form-select' %>
          </div>

          <%= button_tag "Pesquisar", class: "btn btn-secondary search-button" %>
        </div>

      <% end %>
    </div>

  </div>

</div>
