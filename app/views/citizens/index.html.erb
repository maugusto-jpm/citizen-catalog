<div class="page-with-margin">

  <h4>Lista de munÃ­cipes</h4>

  <div class="card mb-4">

    <div class="card-body">
      <%= form_tag(citizens_path, method: :post, class: 'w-100') do %>

        <div class="row w-100">

          <div class="col-md-3 form-group">
            <%= label_tag :name, 'Nome' %>
            <%= text_field :name, params[:name], class: 'form-control' %>
          </div>

          <div class="col-md-3 form-group">
            <%= label_tag :cpf, 'CPF' %>
            <%= text_field :cpf, params[:cpf], class: 'form-control' %>
          </div>

          <div class="col-md-3 form-group">
            <%= label_tag :cns, 'CNS' %>
            <%= text_field :cns, params[:cns], class: 'form-control' %>
          </div>

          <div class="col-md-3 form-group">
            <%= label_tag :email, 'E-mail' %>
            <%= text_field :email, params[:email], class: 'form-control' %>
          </div>

        </div>
        <div class="row w-100">

          <div class="col-md-3 form-group">
            <%= label_tag :phone, 'Telefone' %>
            <%= text_field :phone, params[:phone], class: 'form-control' %>
          </div>

          <div class="col-md-3 form-group">
            <%= label_tag :status, 'Status' %>
            <%= text_field :status, params[:status], class: 'form-control' %>
          </div>

          <%= button_tag "Pesquisar", class: "btn btn-secondary search-button" %>
        </div>

      <% end %>
    </div>

  </div>

</div>
